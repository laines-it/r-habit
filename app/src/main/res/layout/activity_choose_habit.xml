<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registration.RegistrationActivity"
    android:background="@drawable/back_register"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="100"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:weightSum="100">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="66"
                android:src="@drawable/rabbit_smile" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="33">

                <ImageView

                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="33"
                    android:src="@drawable/cloud_speech"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView

                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/berlinsansbold"
                    android:text="Пора выбрать новую привычку!"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/imageView2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.35000002">

                </TextView>

                <TextView
                    android:id="@+id/text_message"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gillsans"
                    android:text="Выбери сначала тему"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/imageView2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/imageView2">

                </TextView>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:orientation="vertical"
            android:weightSum="100">

            <HorizontalScrollView
                android:id="@+id/choose_area"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="20"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:weightSum="160"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/readinghabitchoose"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="20"
                        android:src="@drawable/reading_habit_logo" />
                    <ImageView
                        android:id="@+id/musichabitchoose"
                        android:layout_weight="20"
                        android:scaleType="centerInside"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/music_habit_logo" />

                    <ImageView
                        android:id="@+id/sciencehabitchoose"
                        android:layout_weight="20"
                        android:scaleType="centerInside"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/science_habit_logo" />
                    <ImageView
                        android:layout_weight="20"
                        android:scaleType="centerInside"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/rabbit" />
                    <ImageView
                        android:id="@+id/handicrafthabitchoose"
                        android:layout_weight="20"
                        android:scaleType="centerInside"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/handicraft_habit_logo" />
                    <ImageView
                        android:layout_weight="20"
                        android:scaleType="centerInside"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/rabbit" />

                    <ImageView
                        android:layout_weight="20"
                        android:scaleType="centerInside"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/rabbit" />
                    <ImageView
                        android:layout_weight="20"
                        android:scaleType="centerInside"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/rabbit" />



                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/name_of_habit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:fontFamily="@font/berlinsansbold"
                android:textSize="60dp"
                android:layout_weight="40" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_weight="40">

                <Button
                    android:id="@+id/select_new_habit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Далее"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="horizontal"
            android:weightSum="100">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="40" />
            <ImageView
                android:layout_weight="20"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/dots2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="40" />


        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>